{
    "name"       : "salaros/mr-press-composer",
    "description": "Set of tools used during installation and configuration of Mr. Press project.",
    "keywords"   : [
        "wordpress", "composer", "script", "deploy", "database"
    ],
    "type"       : "library",
    "license"    : "MIT",
    "homepage"   : "https://github.com/salaros/mr-press-composer",
    "support"    : {
        "issues"      : "https://github.com/salaros/mr-press-composer/issues",
        "source"      : "https://github.com/salaros/mr-press-composer"
    },
    "authors"    : [
        {
            "name"    : "Zhmayev Yaroslav",
            "email"   : "salaros@yandex.ru",
            "homepage": "https://github.com/salaros",
            "role"    : "Developer"
        }
    ],
    "require": {
        "php"                                           : ">=5.4.0",
        "wp-cli/wp-cli"                                 : "~1.4.0",
        "vlucas/phpdotenv"                              : "~2.0",
        "qi-interactive/cron"                           : "*@dev",
        "salaros/wp-salts"                              : "~0.3.0"
    },
    "require-dev": {
        "sphpdox/sphpdox"                               : "dev-master@dev"
    },
    "autoload": {
        "psr-4": {
            "Salaros\\MrPress\\Composer\\"              : "src/"
        }
    },
    "minimum-stability"                                 : "stable",
    "prefer-stable"                                     : true,
    "scripts": {
        "docs": [
            "cd ./docs && make html"
        ]
    }
}
